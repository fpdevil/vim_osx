<?xml version="1.0" encoding="UTF-8"?>
<!--######################################################################-->
<!--## Datapower Routing Configuration file        						          ##-->
<!--## Specify the following for each service URL  						          ##-->
<!--## 1. proxyIface - Datapower FSH Interface     						          ##-->
<!--## 2. proxyPort  - Datapower FSH Port          						          ##-->
<!--## 3. sslProxy (SSL Proxy Profile if needed)   						          ##-->
<!--## 4. App name for logging                     						          ##-->
<!--## 1 & 2 will be selected based on the attribute of proxy           ##-->
<!--## type="resource" or type="authorization"                          ##-->
<!--######################################################################-->
<route xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="routing.xsd">
    <service uri="ivr">
        <!-- Route config for 247 authorization token -->
        <proxy type="authorization">
            <proxyIface>PublicInterfaceECOMFrontEnd</proxyIface>
            <proxyPort>4021</proxyPort>
            <name>24|7 Customer Interaction Authorization Service</name>
            <sslProxy>247_MPG_CLIENT_SSL_PROXY_PROFILE</sslProxy>
        </proxy>
        <!-- Route config for 247 resources -->
        <proxy type="resource">
            <proxyIface>PublicInterfaceECOMFrontEnd</proxyIface>
            <proxyPort>4022</proxyPort>
            <name>24|7 Customer Interaction Resource Service</name>
            <sslProxy>247_MPG_CLIENT_SSL_PROXY_PROFILE</sslProxy>
        </proxy>
    </service>
    <service uri="csr">
        <!-- Route config for CSR App authorization token -->
        <proxy type="authorization">
            <proxyIface>ManagementInterface</proxyIface>
            <proxyPort>3482</proxyPort>
            <name>CSR MFF App Authorization Service</name>
            <sslProxy>client:SSL_CLIENT_ROOT</sslProxy>
        </proxy>
        <!-- Route config for CSR App resources -->
        <proxy type="resource">
            <proxyIface>ManagementInterface</proxyIface>
            <proxyPort>3483</proxyPort>
            <name>CSR MFF App Resource Service</name>
            <sslProxy>client:SSL_CLIENT_ROOT</sslProxy>
        </proxy>
    </service>
    <service uri="abc">
        <proxy type="authorization">
            <proxyIface>ManagementInterface</proxyIface>
            <proxyPort>8080</proxyPort>
        </proxy>
        <proxy type="resource">
            <proxyIface>ManagementInterface</proxyIface>
            <proxyPort>8081</proxyPort>
            <name>Application 1 end-point 2</name>
            <sslProxy>DP_SSL_PP</sslProxy>
        </proxy>
    </service>
</route>