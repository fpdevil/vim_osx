#!/bin/bash

# environment variables for bash_profile

#############################################################################
# for antigen
#############################################################################
# load antigen
source /usr/local/share/antigen/antigen.zsh

POWERLEVEL9K_INSTALLATION_PATH=$ANTIGEN_BUNDLES/bhilburn/powerlevel9k

antigen bundles
antigen bundle osx
antigen bundle colorize
antigen bundle command-not-found
antigen bundle zsh-users/zsh-completions
antigen bundle zsh-users/zsh-autosuggestions
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle supercrabtree/k

antigen apply

#############################################################################
# python3 path setup
#############################################################################
#export PYTHONPATH=$(brew --prefix)/lib/python3.6/site-packages:${PYTHONPATH}
#export PYTHON3_INCLUDE_DIR=/usr/local/opt/python3/Frameworks/Python.framework/Versions/3.6/include/python3.6m:${PYTHON3_INCLUDE_DIR}
#export PYTHON3_LIBRARY=/usr/local/opt/python3/Frameworks/Python.framework/Versions/3.6/lib/libpython3.6m.dylib:${PYTHON3_LIBRARY}

#############################################################################
# For Python Virtualenv/Virtualenvwrapper
#############################################################################
mkdir -p ~/.virtualenvs
export WORKON_HOME=~/.virtualenvs
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python3.6
source /usr/local/bin/virtualenvwrapper.sh

#############################################################################
# for pkg-config
#############################################################################
export PKG_CONFIG_PATH=/opt/X11/lib/pkgconfig

#############################################################################
# for golang
#############################################################################
export GOROOT=/usr/local/opt/go/libexec
export GOPATH=$HOME/sw/programming/gocode/go
export PATH=$PATH:$GOROOT/bin
export PATH=$PATH:$GOPATH/bin
#export PATH=$GOROOT/bin:${GOPATH//://bin:}/bin:$PATH

#############################################################################
# for haskell
#############################################################################
export STACK_BIN=$HOME/.local/bin
export CABAL_BIN=$HOME/Library/Haskell/bin
export PATH=$CABAL_BIN:$STACK_BIN:$PATH

#############################################################################
# for opencv
#############################################################################
# export PATH=/usr/local/opt/opencv3/bin:$PATH

# For compilers to find this software you may need to set:
# LDFLAGS:  -L/usr/local/opt/opencv3/lib
# CPPFLAGS: -I/usr/local/opt/opencv3/include
# For pkg-config to find this software you may need to set:
# PKG_CONFIG_PATH: /usr/local/opt/opencv3/lib/pkgconfig

# for xmllint indentation
export XMLLINT_INDENT="	"

#############################################################################
# Path
#############################################################################
export PATH="/usr/local/bin:$PATH"
